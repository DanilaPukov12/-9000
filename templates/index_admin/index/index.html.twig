{% extends 'index_admin/base_admin.html.twig' %}

{% block title %}{{ parent() }} - Начальная страница {% endblock %}

{% block content_wrapper_header %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Начальная страница</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('index_admin') }}">Главная</a></li>
                        <li class="breadcrumb-item active">Начальная страница</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
{% endblock %}

{% block content_wrapper_main %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card card-primary card-outline">
                        <div class="card-body">
                            <h5 class="card-title">Таблица с обратной связью</h5>

                            <p class="card-text">
                                Здесь можно посмореть сообщения, поступившие на сайт, и установить их статус
                            </p>
                            <a href="{{ path("admin_feedback") }}" class="card-link" title="Обратная связь">Пурейти</a>
                        </div>
                    </div><!-- /.card -->
                </div>
                <!-- /.col-lg-6 -->
                <div class="col-lg-6">
                    <div class="card card-primary card-outline">
                        <div class="card-body">
                            <h5 class="card-title">Заказы</h5>

                            <p class="card-text">
                                Отображение всех поступивших заказов и обноление статуса
                            </p>
                            <a href="{{ path("admin_order") }}" class="card-link" title="Заказы">Пурейти</a>
                        </div>
                    </div><!-- /.card -->
                </div>
                <!-- /.col-lg-6 -->

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
{% endblock %}
