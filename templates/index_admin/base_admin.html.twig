<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link href="{{ asset('img/favicon.ico') }}" rel="shortcut icon" type="image/vnd.microsoft.icon">

    <meta name="robots" content="noindex"/>
    <meta name="googlebot" content="noindex"/>
    <meta name="googlebot-news" content="noindex"/>

    <title>{% block title %}Админ-панель{% endblock %}</title>

    {% block stylesheets %}
        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="{{ asset('vendors/admin/plugins/fontawesome-free/css/all.min.css') }}">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('css/admin/adminlte.min.css') }}">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    {% endblock %}
</head>
<body class="hold-transition sidebar-mini sidebar-collapse">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="{{ path('index_admin') }}" class="nav-link">Главная</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="{{ path('index') }}" class="nav-link">Пурейти на mupexpress52.ru<i class="fas fa-arrow-right ml-1"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    {% block main_aside %}
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('index_admin') }}" class="brand-link">
            <span class="brand-text font-weight-light">МУП "Экспресс"</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            {% block sidebar_user %}
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="{{ asset('img/admin/user2-160x160.jpg') }}" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Alexander Pierce</a>
                </div>
            </div>
            {% endblock %}

            <!-- Sidebar Menu -->
            {% include "modules/admin/sidebar.menu.html.twig" %}
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
    {% endblock %}

    <!-- Content Wrapper. Contains page content -->
    {% block content_wrapper %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        {% block content_wrapper_header %}{% endblock %}
        <!-- /.content-header -->

        <!-- Main content -->
        {% block content_wrapper_main %}{% endblock %}
        <!-- /.content -->
    </div>
    {% endblock %}
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- Default to the left -->
        <strong>Copyright &copy; 2020.</strong> Все права защищены.
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->
{% block scripts %}
<!-- jQuery -->
<script src="{{ asset('vendors/admin/plugins/jquery/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('vendors/admin/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}

{% block main_scripts %}
    <!-- AdminLTE App -->
    <script src="{{ asset('js/admin/adminlte.min.js') }}"></script>
{% endblock %}
</body>
</html>
